{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "settings": {
        "inferno": {
          "createClass": "createClass",
          "pragma": "Inferno"
        },
        "propWrapperFunctions": [ "forbidExtraProps" ]
    },
    "extends": [
        "plugin:prettier/recommended",
        "eslint:recommended", 
        "plugin:inferno/recommended"
    ],
    "parser": "babel-eslint",
    "rules": {
        "no-console": 0,
        "no-unused-vars": "warn",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "plugins": [
      "inferno"
    ]
}