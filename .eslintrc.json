{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "settings": {
        "inferno": {
          "createClass": "createClass",
          "pragma": "Inferno"
        },
        "propWrapperFunctions": [ "forbidExtraProps" ]
    },
    "extends": [
        "plugin:prettier/recommended", 
        "plugin:inferno/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}